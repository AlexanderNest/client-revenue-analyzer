<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-client-sequence" author="Uenay">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="client_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="client_seq"
                        startValue="1"
                        incrementBy="1"/>
    </changeSet>

    <!-- === CLIENT TABLE === -->
    <changeSet id="create-table-client" author="Valera">
        <createTable tableName="client">
            <column name="id" type="BIGINT" defaultValueComputed="NEXT VALUE FOR client_seq">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="price_per_hour" type="INT"/>
        </createTable>
        <createIndex indexName="IDX_CLIENT_ID" tableName="client">
            <column name="id"/>
        </createIndex>
    </changeSet>

    <changeSet id="add-client-columns" author="nesterov">
        <addColumn tableName="client">
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="start_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
            </column>
            <column name="phone" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

    <!-- === USER TABLE === -->
    <changeSet id="create-table-users" author="Valera">
        <preConditions><not><tableExists tableName="users"/></not></preConditions>
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="main_calendar_id" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="cancelled_calendar_id" type="VARCHAR(200)"/>
            <column name="cancelled_calendar_enabled" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="events_backup_enabled" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

    <changeSet id="add-user-id-to-client" author="Valera">
        <addColumn tableName="client">
            <column name="user_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="client"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id" constraintName="user_client_id"/>
    </changeSet>

    <changeSet id="unique-constraints-client" author="Uenay">
        <addUniqueConstraint tableName="client" columnNames="name" constraintName="client_unique_name"/>
        <createIndex tableName="client" indexName="IDX_UNIQUE_PHONE_PER_USER" unique="true">
            <column name="phone"/>
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="client" indexName="IDX_UNIQUE_CLIENT_NAME_PER_USER" unique="true">
            <column name="name"/>
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <!-- === PRICE CHANGE HISTORY === -->
    <changeSet id="create-price-change-history" author="Uenay">
        <createTable tableName="price_change_history">
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="previous_price" type="INT"/>
            <column name="current_price" type="INT"/>
            <column name="date_of_change" type="DATE" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="price_change_history"
                                 baseColumnNames="client_id"
                                 referencedTableName="client"
                                 referencedColumnNames="id" constraintName="price_client_id"/>
    </changeSet>

    <!-- === EVENT BACKUP TABLE === -->
    <changeSet id="create-table-event-backup" author="Lizogubov Eugeny">
        <createTable tableName="event_backup">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="backup_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="event_backup"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id" constraintName="user_event_backup_id"/>
        <createIndex tableName="event_backup" indexName="idx_event_backup_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="event_backup" indexName="idx_event_backup_backup_time">
            <column name="backup_time"/>
        </createIndex>
    </changeSet>

    <!-- === EVENT TABLE === -->
    <changeSet id="create-table-event" author="Lizogubov Eugeny">
        <createTable tableName="event">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="VARCHAR(200)"/>
            <column name="start_date" type="TIMESTAMP"/>
            <column name="end_date" type="TIMESTAMP"/>
            <column name="event_backup_id" type="BIGINT"/>
            <column name="event_extension" type="VARCHAR(500)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="event" baseColumnNames="event_backup_id"
                                 referencedTableName="event_backup" referencedColumnNames="id"
                                 onDelete="CASCADE" constraintName="event_backup"/>
        <createIndex tableName="event" indexName="idx_event_event_backup_id">
            <column name="event_backup_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
